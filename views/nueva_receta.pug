extends ./layout/index

block slider
    .container
        h3 Nueva receta

block contenido
    .container
        p.center-align Ingrese los datos de la nueva receta

        if(errores)
            each error in errores
                .card-panel.red.lighten-3
                    p.center-align.m0= error.mensaje

        .row
            form.col.s12(action="/nueva_receta", method="POST", enctype="multipart/form-data")
                .row
                    .input-field.col.s6
                        input#sender_name(type="text", name="sender_name", value=sender_name)
                        label(for="sender_name") Nombre
                    .input-field.col.s6
                        input#sender_last_name(type="text", name="sender_last_name", value=sender_last_name)
                        label(for="sender_last_name") Apellido
                    .input-field.col.s12.l6
                        input#sender_email(type="text", name="sender_email", value=sender_email)
                        label(for="sender_email") Correo Electronico
                    .input-field.col.s8
                        input#name_recipe(type="text", name="name_recipe", value=name_recipe)
                        label(for="name_recipe") Nombre de la receta
                    .input-field.col.s4
                        select#difficult_recipe(name="difficult_recipe")
                            option(value="Facil" ) Amateur
                            option(value="Intermediario") Intermediario
                            option(value="Experto") Experto
                        label Dificultad
                    .input-field.col.s12
                        textarea#description_recipe.materialize-textarea(name="description_recipe", cols="30", rows="10") #{description_recipe}
                        label(for="description_recipe") Descripci√≥n
                    .col.s12.mb20
                        p Imagen
                        input#file(type="file", name="file")
                    
                    h5.col.s12.mt20 Ingredientes:
                    .col.s6
                        a#agregar_ing.btn.red.darken-3.waves-effect.waves-light(href="#", style="font-weight:bold; font-size:20px") +
                        ul#lista_ingredientes_input
                            li
                                .input-field
                                    input.ingredientes(type="text", name="ingredientes", id=`ingredientes`)
                                    label(for=`ingredientes`) Ingrediente
                    
                    h5.col.s12.mt20 Instrucciones:
                    .col.s6
                        a#agregar_inst.btn.red.darken-3.waves-effect.waves-light(href="#", style="font-weight:bold; font-size:20px") +
                        ul#lista_instrucciones_input
                            li
                                .input-field
                                    input.instrucciones(type="text", name="instrucciones", id=`instrucciones`)
                                    label(for=`instrucciones`) Instruccion


                    .col.s12.mt10
                        button.btn.waves-effect.waves-light.btn-large.light-green.darken-3.right(type='submit')
                            | Guardar
                            i.material-icons.right send
    

                    